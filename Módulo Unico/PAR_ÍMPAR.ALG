Algoritmo "ParOuÍmpar"

var
   N: Inteiro

inicio

   //Interação do usuá

   EscrevaL ("Digite um número:")
   Leia (N)

   //Estrutura condicional para saber um número é par ou ímpar

   Se (N % 2=0) entao
      EscrevaL ("O número " ,N, " é PAR!")
   Senao
      EscrevaL("O número " ,N, "é ÍMPAR!")
   FimSe

fimalgoritmo